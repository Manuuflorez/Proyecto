<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Resultados de Joins</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand">Proyecto Bases de Datos</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="/">Clientes</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/products">Productos</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/orders">Pedidos</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/vistas">Vistas</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/joins">Joins</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/procedures">Procedimientos Almacenados</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/functions">Funciones Avanzadas</a>
                </li>
            </ul>
        </div>
    </nav> 
    <div class="container">
        <div class="row mt-5">
            <div class="col-md-12">
                <h2>Tabla de Pedidos con Clientes</h2>
                <table class="table table-bordered table-hover">
                    <thead>
                        <th>ID del Pedido</th>
                        <th>Nombre del Cliente</th>
                        <th>Fecha del Pedido</th>
                        <th>Producto</th>
                        <th>Precio Unitario</th>
                        <th>Total</th>
                    </thead>
                    <tbody>
                        <% if (data.pedidosConClientes) { %>
                            <% data.pedidosConClientes.forEach(function(item) { %>
                                <tr>
                                    <td><%= item.ID_Pedido %></td>
                                    <td><%= item.Nombre_Cliente %></td>
                                    <td><%= item.Fecha_Pedido %></td>
                                    <td><%= item.Producto %></td>
                                    <td>$<%= item.Precio_Unitario.toFixed(2) %></td>
                                    <td>$<%= item.Total.toFixed(2) %></td>
                                </tr>
                            <% }); %>
                        <% } %>
                    </tbody>
                </table>

                <h2>Tabla de Resumen de Clientes</h2>
                <table class="table table-bordered table-hover">
                    <thead>
                        <th>Nombre del Cliente</th>
                        <th>Total</th>
                    </thead>
                    <tbody>
                        <% if (data.resumenClientes) { %>
                            <% data.resumenClientes.forEach(function(item) { %>
                                <tr>
                                    <td><%= item.Nombre_Cliente %></td>
                                    <td>
                                        <% if (item.Total !== null) { %>
                                            $<%= item.Total.toFixed(2) %>
                                        <% } else { %>
                                            N/A
                                        <% } %>
                                    </td>
                                </tr>
                            <% }); %>
                        <% } %>
                    </tbody>
                </table>
                

                <h2>Tabla de Resumen de Productos</h2>
                <table class="table table-bordered table-hover">
                    <thead>
                        <th>Producto</th>
                        <th>Total de Pedidos</th>
                    </thead>
                    <tbody>
                        <% if (data.resumenProductos) { %>
                            <% data.resumenProductos.forEach(function(item) { %>
                                <tr>
                                    <td><%= item.Producto %></td>
                                    <td><%= item.Total %></td>
                                </tr>
                            <% }); %>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>
