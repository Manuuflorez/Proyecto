<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Pedidos con Clientes</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand">Proyecto Bases de Datos</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="/">Clientes</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/products">Productos</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/orders">Pedidos</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/vistas">Vistas</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/joins">Joins</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/procedures">Procedimientos Almacenados</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/functions">Funciones Avanzadas</a>
                </li>
            </ul>
        </div>
    </nav> 

    <div class="container">
        <div class="row mt-5">
            <div class="col-md-7">
                <h2>Lista de Pedidos con Clientes</h2>
                <table class="table table-bordered table-hover">
                    <thead>
                        <th>ID del Pedido</th>
                        <th>Nombre del Cliente</th>
                        <th>Fecha del Pedido</th>
                        <th>Total</th>
                    </thead>
                    <tbody>
                        <% if (data && data.pedidosConClientes) { %>
                            <% data.pedidosConClientes.forEach(function(item) { %>
                                <tr>
                                    <td><%= item.ID_Pedido %></td>
                                    <td><%= item.Nombre_Cliente %></td>
                                    <td><%= item.Fecha_Pedido %></td>
                                    <td>$<%= item.Total %></td>
                                </tr>
                            <% }); %>
                        <% } %>
                    </tbody>
                </table>
            </div>
            <div class="col-md-7">
                <h2>Detalles de Productos en Pedidos</h2>
                <table class="table table-bordered table-hover">
                    <thead>
                        <th>ID del Pedido</th>
                        <th>Nombre del Producto</th>
                        <th>Cantidad</th>
                    </thead>
                    <tbody>
                        <% if (data && data.detallesProductosEnPedidos) { %>
                            <% data.detallesProductosEnPedidos.forEach(function(item) { %>
                                <tr>
                                    <td><%= item.ID_Pedido %></td>
                                    <td><%= item.producto %></td>
                                    <td><%= item.cantidad %></td>
                                </tr>
                            <% }); %>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</body>
</html>
